<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Chỗ Ở Mới"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="32dp"/>

        <!-- Nhập Tên -->
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Chỗ Ở"
            android:textColorHint="#888888"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_gravity="center"/>

        <!-- Nhập Địa Chỉ -->
        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa Chỉ"
            android:textColorHint="#888888"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:inputType="text"/>

        <!-- Nhập Đánh Giá -->
        <EditText
            android:id="@+id/et_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đánh Giá (Ví Dụ: 4.5)"
            android:textColorHint="#888888"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"/>

        <!-- Nhập Giá -->
        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá (Ví Dụ: 100.000đ/Đêm)"
            android:textColorHint="#888888"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"/>

        <!-- Nhập Mô Tả -->
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô Tả"
            android:textColorHint="#888888"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"/>

        <!-- Chọn Loại Chỗ Ở -->
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"/>

        <!-- Ảnh 1 -->
        <ImageView
            android:id="@+id/ivAccomImage1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Ảnh 1"/>

        <!-- Ảnh 2 -->
        <ImageView
            android:id="@+id/ivAccomImage2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Ảnh 2"/>

        <!-- Ảnh 3 -->
        <ImageView
            android:id="@+id/ivAccomImage3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Ảnh 3"/>

        <!-- Nút Thêm Chỗ Ở -->
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Chỗ Ở"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="@color/oliveGreen"
            android:layout_marginTop="10dp" /> <!-- Optional icon for button -->

    </LinearLayout>

</ScrollView>
