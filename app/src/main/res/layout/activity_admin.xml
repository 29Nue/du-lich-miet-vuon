<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_location"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_diadanh"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_location"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Tour"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_more"
                    android:padding="5dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Place"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_place"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_diemdi"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_place"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Map"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_more"
                    android:padding="5dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Intro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_introduce"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_introduce"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_introduce"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Giới thiệu"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_more"
                    android:padding="5dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Restaurant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_restaurant"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_restaurant"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_restaurant"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Ăn uống"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_more"
                    android:padding="5dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Hotel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_hotel"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_hotel2"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_hotel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Khách sạn"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_more"
                    android:padding="5dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Vehicle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_chatbox"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_chatbox"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_chatbox"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="ChatBox"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_chatbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:padding="5dp"
                    android:src="@drawable/ic_more" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Exper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_experience"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_exper"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_experience"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Trang chủ"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_exper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_more"
                    android:padding="5dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crd_Account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_user"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_account"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_user"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Tài khoản"
                    android:textColor="#000"
                    android:textSize="24sp"></TextView>
                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menu_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_more"
                    android:padding="5dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_Nofitication"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_nofitication"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_notification"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_nofitication"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Thông báo"
                        android:textColor="#000"
                        android:textSize="24sp"></TextView>
                    <!-- Menu Button -->
                    <ImageButton
                        android:id="@+id/menu_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="Menu"
                        android:src="@drawable/ic_more"
                        android:padding="5dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_DDDL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_DDDL"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_dddl"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_DDDL"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Địa điểm"
                        android:textColor="#000"
                        android:textSize="24sp"></TextView>
                    <!-- Menu Button -->
                    <ImageButton
                        android:id="@+id/menu_dddl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@null"
                        android:contentDescription="Menu"
                        android:padding="5dp"
                        android:src="@drawable/ic_more" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_Booking"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_booking"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_booking"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_booking"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="DS Booking"
                        android:textColor="#000"
                        android:textSize="24sp"></TextView>
                    <!-- Menu Button -->
                    <ImageButton
                        android:id="@+id/menu_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="Menu"
                        android:src="@drawable/ic_more"
                        android:padding="5dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>