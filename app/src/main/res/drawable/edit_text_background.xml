<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền màu xanh nhẹ như lá cây, mang lại cảm giác tươi mới -->
    <solid android:color="#E1F5C4"/>

    <!-- Bo góc mềm mại, tạo cảm giác dễ chịu -->
    <corners android:radius="6dp"/>

    <!-- Viền mỏng, dùng màu xám nhạt cho nhẹ nhàng -->
    <stroke android:color="#C8E6C9" android:width="1dp"/>

    <!-- Padding giúp nội dung không bị chạm sát vào viền -->
    <padding android:left="12dp" android:right="12dp" android:top="10dp" android:bottom="10dp"/>
</shape>
