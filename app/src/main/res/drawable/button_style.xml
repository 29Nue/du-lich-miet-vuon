<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFA726"/> <!-- Màu cam sáng khi bấm -->
            <corners android:radius="20dp"/>
            <stroke android:width="3dp" android:color="#FF9800"/>
            <size android:width="200dp" android:height="60dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Màu cam chính -->
            <corners android:radius="20dp"/>
            <stroke android:width="3dp" android:color="#FFA726"/>
            <size android:width="200dp" android:height="60dp"/>
        </shape>
    </item>
</selector>
